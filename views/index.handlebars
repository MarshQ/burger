<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1> BURGER-TRON-9000</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <h2> Your Burger Pile</h2>
            <ul>
                {{#each burgers}}
                    {{#unless devoured}}
                        <li>
                            {{name}}

                            <button class="nom-nom" data-id="{{id}}" data-newsleep="{{devoured}}">
                                {{#if devoured== false}}DEVOUR YOUR BURGER!{{/if}}
                            </button>

                        </li>
                    {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-md-4">
            <h2>Make a Burger</h2>
            <img src="http://piq.codeus.net/static/media/userpics/piq_387804_400x400.png">
            <form class="create-form">

                <div class="form-group">
                    <label for="bun">Burger Name:</label>
                    <input type="text" id="bun" name="name">
                </div>
                <button type="submit">Add Burger</button>
            </form>
        </div>
        <div class="col-md-4">
            <h2>Your Stomach</h2>

            <ul>
                {{#each burgers}}
                    {{#if devoured}}
                    <li>
                        {{name}}
                    </li>
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>  
</div>          
